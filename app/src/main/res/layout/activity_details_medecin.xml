<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.btssio.leroybenjamin.gsbexemple.Medecin.DetailsMedecinActivity"
    android:weightSum="1">

    <Button
        android:id="@+id/btn_deleteMedecin"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Supprimer" />

    <Button
        android:id="@+id/btn_updateMedecin"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Modifier" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nom : "
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/et_detailNomMedecin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prenom : "
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/et_detailPrenomMedecin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CrÃ©er une visite"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="20sp"/>
            <CalendarView
                android:id="@+id/calendarViewVisite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </CalendarView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Motif : "
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/et_visiteMotif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visiteur"
                android:textSize="20sp"/>
            <Spinner
                android:id="@+id/spinnerVisiteurs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
            <Button
                android:id="@+id/btn_insertVisite"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="VALIDER" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>